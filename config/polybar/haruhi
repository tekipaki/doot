[module/gee]
type = custom/script
label-foreground = ${haruhi.fg}
exec = echo "/g/ $(python3 ~/.scripts/scrapechan.py)"
interval = 300

[module/ayy]
type = custom/script
label-foreground = ${haruhi.fg}
exec = echo "/a/ $(python3 ~/.scripts/scrapechan.py a)"
interval = 300

[module/bright]
type = custom/script
label-foreground = ${haruhi.fg}
exec = echo BL: $(/home/uwuzi/.scripts/bright.sh)%
interval = 30

[module/uptime]
type = custom/script
label-foreground = ${haruhi.fg}
exec = echo "UP: $(~/.scripts/system-uptime-pretty.sh)"
interval = 120


[module/proc]
type = custom/script
exec = echo "PROC: $(ps -A --no-headers | wc -l)"
interval = 120

